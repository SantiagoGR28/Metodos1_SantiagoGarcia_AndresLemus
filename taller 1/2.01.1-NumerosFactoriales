def numero_factorial(numero): 
    if numero < 0: 
        print("No existe el numero factorial de números negativos")

    elif numero == 0: 
        return 1
        
    else: 
        factorial = 1
        while(numero > 1): 
            factorial *= numero 
            numero -= 1
        return factorial 

numero = 20; 

print("El número factorial de",numero,"es", numero_factorial(numero)) 
